<tr class="invoiceLine">
    <td class="lineDesc">
        <div class="inputDiv">
        {{ line.description }}
        </div>
    </td>
    <td class="lineQty">
        <div class="inputDiv">
        {{ line.quantity }}
        </div>
    </td>
    <td class="lineUC">
        <div class="inputDiv">
        {{ line.unitaryCost }}
        </div>
    </td>
    <td class="lineTaxes">
        <div>

        {% for tax in line.taxes %}
            <div class="tax">
            {{ tax.value }}% {{ tax.name }}
            </div>
        {% endfor %}
        </div>
    </td>
    <td class="lineDiscount">
        <div class="inputDiv">
            {{ line.discount }}
        </div>
    </td>
    <td class="linePrice">
        {{ line.totalAmount|number_format(2, '.', ',') }}â‚¬
    </td>
</tr>