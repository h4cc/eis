<table  class="table table-bordered table-hover" style="margin: 25px; width: 97%;">
    <thead>
    <tr>
        <th {% if invoices.isSorted('i.number') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(invoices, 'Invoice number'|trans, 'i.number') }}</th>
        <th {% if invoices.isSorted('c.customer_name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(invoices, 'Customer name'|trans, 'c.customer_name') }}</th>
        <th>{{ 'Date'|trans }}</th>
        <th>{{ 'Due date'|trans }}</th>
        <th>{{ 'Due'|trans }}</th>
        <th>{{ 'Status'|trans }}</th>
        <th>{{ 'Total'|trans }}</th>
        <th class="clear"></th>
    </tr>
    </thead>
    <tbody>
    {% for common in invoices %}
        <tr>
            <td>
                {{ common.invoice.number }}
            </td>
            <td>{{ common.customerName }}</td>
            <td>{{ common.invoice.issueDate|date('d/m/Y') }}</td>
            <td>{{ common.invoice.dueDate|date('d/m/Y') }}</td>
            <td>{{ 'Pending'|trans }}</td>
            <td>{{ common.invoice.statusName|trans }}</td>
            <td>{{ common.invoice.grossAmount|number_format(2, '.', ',') }} â‚¬</td>
            <td>
                <a href="#" alt="{{ 'Pay'|trans }}" class="btn btn-small"><i class="icon-barcode"></i> {{ 'Pay'|trans }}</a>
                &nbsp;
                <a href="{{ path('invoice_edit', {'id': common.id }) }}" alt="{{ 'Edit'|trans }}" class="btn btn-small"><i class="icon-edit"></i> {{ 'Edit'|trans }}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="8">
            {{ knp_pagination_render(invoices, 'TeclliureInvoiceBundle:Common:simple_pagination.html.twig') }}
        </td>
    </tr>
    </tfoot>
</table>