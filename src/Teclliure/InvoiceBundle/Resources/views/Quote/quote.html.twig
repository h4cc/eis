
    <div id="inside_content"  style="font-size: 0.8em;">
        Barcelona, {{ common.quote.created|localizeddate('long','none') }}
        <br /><br />
        <b>{{ common.customerName }}</b><br />
        {% if common.quote.contactName or common.quote.contactEmail %}
            <b>Att. {{ common.quote.contactName }} {{ common.quote.contactEmail }}</b><br />
        {% endif %}
        NIF: {{ common.customerIdentification }}<br />
        {{ common.customerAddress }}<br />
        {{ common.customerZipCode }} {{ common.customerCity }}<br />
        {{ common.customerState }} {{ common.customerCountry }}<br />
        <br />
        <b>{{ 'Quote'|trans }} - {{ common.quote.number }}</b>
        <br />
        <br />
        <div class="inputDiv control-group">
            {{ common.description|raw }}
        </div>

        <table id="commonLines" class="lines" style="margin-top: 40px; width: 100%;">
            <tbody id="tbody_lines">
            {% for line in common.commonLines %}
                {{ include('TeclliureInvoiceBundle:Common:line.html.twig', {'line': line}) }}
            {% endfor %}
            </tbody>
            <tfoot>
            <tr id="add_line_link_li" class="not_delete">
                <td colspan="2">&nbsp;</td>
            </tr>
            {% if common.discountAmount %}
                <tr id="add_line_link_li" class="not_delete">
                    <td style="color: black; font-size: 9px;">{{ 'Base'|trans }}</td>
                    <td id="total_base_amount" style="color: black; font-size: 9px; text-align: right;">{{ common.baseAmount|number_format(2, '.', ',') }} €</td>
                </tr>
                <tr id="add_line_link_li" class="not_delete">
                    <td style="color: black; font-size: 9px;">{{ 'Discount'|trans }}</td>
                    <td id="total_discount" style="color: black; font-size: 9px; text-align: right;">- {{ common.discountAmount|number_format(2, '.', ',') }} €</td>
                </tr>
            {% endif %}
            <tr id="add_line_link_li" class="not_delete" style="border-bottom: solid 2px black; color: black;">
                <td style="width: 80%;  font-size: 10px"><b>{{ 'TOTAL'|trans }}</b></td>
                <td style="width: 20%;  font-size: 10px; text-align: right;" id="total_subtotal"><b>{{ common.netAmount|number_format(2, '.', ',') }} €</b></td>
            </tr>
            </tfoot>
        </table>
        <div style="margin-left: 7px; font-size: 0.8em;">IVA no incluido</div>

        <div class="inputDiv control-group" style="margin: 40px 0 20px; clear: both; font-size: 0.7em;">
            {{ common.quote.footnote|raw }}
        </div>

        <br /><br /><br />
        <div style="float: left; width: 40%">
            Aceptación presupuesto<br /><br /><br /><br />

            {% if common.quote.contactName %}
                Att. {{ common.quote.contactName }} en nombre de<br />
            {% endif %}
            {{ common.customerName }}
        </div>

        <div style="float: right; width: 40%">
            Aceptación presupuesto<br /><br /><br /><br />

            Ruiz+Company

        </div>

        <div style="clear:both;"></div>

        {% if (print != true) %}
        <div class="list_primary_buttons">
            {% if (common.quote) and (common.quote.status != 0) and not common.invoice and not common.deliveryNote %}
                <a href="{{ path('quote_open', {'id': common.id}) }}" class="btn btn-warning"><i class="icon-folder-open"></i> {{ 'Open and edit'|trans }}</a>
            {% endif %}
            {% if common.invoice %}
                <a href="{{ path('invoice_view', {'id': common.id }) }}" alt="{{ 'View invoice'|trans }}" class="btn btn-small btn-info"><i class="icon-file"></i> {{ 'View invoice'|trans }}</a>
            {% endif %}
            {% if common.deliveryNote  %}
                <a href="{{ path('delivery_note_view', {'id': common.id }) }}" alt="{{ 'View order'|trans }}" class="btn btn-small btn-info"><i class="icon-file"></i> {{ 'View order'|trans }}</a>
            {% endif %}
            <a href="{{ path('quote_list') }}" alt="{{ 'Back to list'|trans }}" class="btn btn-small btn-success"><i class="icon-list"></i> {{ 'Back to list'|trans }}</a>
            <a href="{{ path('quote_print', {'id': common.id }) }}" alt="{{ 'Print'|trans }}" class="btn btn-small"><i class="icon-print"></i> {{ 'Print'|trans }}</a>
        </div>
        {% endif %}
        <div style="clear:both;"></div>
    </div>