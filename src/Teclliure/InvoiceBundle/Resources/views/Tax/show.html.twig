{% extends '::container.html.twig' %}


{% block content %}
<div id="inside_content">
    <div class="list_primary_buttons">
        <a href="{{ path('tax') }}" class="btn btn-primary"><i class="icon-list"></i> {{ 'Back to list'|trans }}</a>
        <a href="{{ path('tax_edit', { 'id': entity.id }) }}" class="btn"><i class="icon-file"></i> Edit</a>
        {% if entity.active %}
            <a href="{{ path('tax_disable', { 'id': entity.id }) }}" class="btn btn-danger"><i class="icon-remove-circle"></i> {{ 'Disable'|trans }}</a>
        {% else %}
            <a href="{{ path('tax_enable', { 'id': entity.id }) }}" class="btn btn-success"><i class="icon-play-circle"></i> {{ 'Enable'|trans }}</a>
        {% endif %}
    </div>

    <h1>Tax</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ entity.value }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
            <tr>
                <th>Is_default</th>
                <td>{{ entity.isdefault }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
