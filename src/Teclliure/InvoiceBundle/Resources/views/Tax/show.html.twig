{% extends '::container.html.twig' %}


{% block content %}
<div id="inside_content">
    <div class="list_primary_buttons">
        <a href="{{ path('tax') }}" class="btn btn-primary"><i class="icon-list"></i> {{ 'Back to list'|trans }}</a>
        <a href="{{ path('tax_edit', { 'id': entity.id }) }}" class="btn"><i class="icon-file"></i> {{ 'Edit'|trans }}</a>
    </div>

    <h1>Tax</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'Value'|trans }}</th>
                <td>{{ entity.value }}</td>
            </tr>
            <tr>
                <th>{{ 'Is active ?'|trans }}</th>
                <td>{{ entity.active }}</td>
            </tr>
            <tr>
                <th>{{ 'Is default ?'|trans }}</th>
                <td>{{ entity.isdefault }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
